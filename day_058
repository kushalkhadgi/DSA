
#include <iostream>
#include <unordered_set>
using namespace std;

bool isHappy(int number)
{
    unordered_set<int> seen;
    
    while (number != 1 && seen.find(number) == seen.end())
    {
        seen.insert(number);
        int sum = 0;
        
        while (number > 0)
        {
            int digit = number % 10;
            number /= 10;
            sum += digit * digit;
        }
        
        number = sum;
    }
    
    return number == 1;
}

int main()
{
    int number;
    cout<<"Enter Number : ";
    cin>>number;

    if(isHappy(number))
    {
        cout<<number <<" is Happy Number!";
    }
    else
    {
        cout<<number <<" is not Happy Number!";
    }
    return 0;
}
