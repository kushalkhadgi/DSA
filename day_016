
#include <iostream>
#include <string>
using namespace std;

int main()
{
    string str;
    cout<<"Enter the String : ";
    cin>>str;
    int sum = 0;

    for(auto i = 0; i < str.length()-1; i++)
    {
        int a = int(str[i]);
        int b = int(str[i+1]);
        
        sum += (abs(a - b));
    }
    cout<<"Score of String : "<<sum;
    return 0;
}
